{
  "name": "@jcoreio/poll",
  "version": "0.0.0-development",
  "description": "handy promised-based polling API",
  "scripts": {
    "prepush": "npm test",
    "prepublishOnly": "echo This package is meant to be published by semantic-release from the dist build directory. && exit 1",
    "tc": "toolchain",
    "toolchain": "toolchain",
    "test": "toolchain test"
  },
  "config": {
    "mocha": "test/index.js --exit",
    "commitizen": {
      "path": "cz-coventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jcoreio/poll.git"
  },
  "keywords": [
    "poll",
    "retry"
  ],
  "author": "Andy Edwards",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jcoreio/poll/issues"
  },
  "homepage": "https://github.com/jcoreio/poll#readme",
  "devDependencies": {
    "@jedwards1211/js-toolchain": "^1.0.9",
    "flow-bin": "^0.135.0",
    "husky": "^4.3.0",
    "typescript": "^3.9.7"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "verifyConditions": "condition-circle"
  },
  "sideEffects": false,
  "hooks": {
    "pre-commit": "toolchain pre-commit",
    "commit-msg": "toolchain commitlint -E HUSKY_GIT_PARAMS"
  }
}
